{
  "name": "chainql",
  "version": "1.0.0",
  "description": "A MCP server for interacting with blockchains",
  "license": "MIT",
  "author": "Sumitesh Naithani",
  "type": "module",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2"
  },
  "bin": {
    "chainql": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"npm run build && node dist/index.js\"",
    "start": "node dist/index.js"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.76"
  }
}
